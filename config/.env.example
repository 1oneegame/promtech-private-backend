# ============================================================================
# IntegrityOS Backend MVP - Environment Configuration
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB Connection URI (leave empty to use local in-memory storage)
# Example: mongodb://localhost:27017
MONGODB_URI=

# MongoDB Database Name
MONGODB_DATABASE=integrity_os

# MongoDB Collection Name
MONGODB_COLLECTION=defects

# Use local storage if MongoDB not available
USE_LOCAL_MODE=true

# ============================================================================
# API CONFIGURATION
# ============================================================================

# API Host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0

# API Port
API_PORT=8000

# Auto-reload on code changes (development only)
API_RELOAD=true

# Number of worker processes
API_WORKERS=1

# ============================================================================
# DATA IMPORT CONFIGURATION
# ============================================================================

# Data directory containing CSV files
DATA_DIR=data

# CSV file encoding (utf-8-sig, cp1251, latin-1, iso-8859-5)
CSV_ENCODING=utf-8-sig

# ============================================================================
# EXPORT CONFIGURATION
# ============================================================================

# Export directory for JSON files
EXPORT_DIR=.

# Enable JSON export after import
EXPORT_JSON=true

# Escape non-ASCII characters in JSON (false = preserve Cyrillic)
JSON_ENSURE_ASCII=false

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=app.log

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
